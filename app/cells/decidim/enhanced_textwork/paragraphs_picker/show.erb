<div class="picker-header">
  <h1><%= t("paragraphs_picker.choose_paragraphs", scope: "decidim.enhanced_textwork") %></h1>
  <input type="text" name="paragraphs-filter" id="paragraphs_filter" placeholder="<%= t("decidim.admin.filters.search_placeholder.id_string_or_title_cont", collection: paragraphs_collection_name) %>">
</div>
<div class="picker-content picker-list" data-picker-path="<%= picker_path %>" data-picker-more="<%= more_paragraphs? %>">
  <%= render :paragraphs %>
</div>
<div class="picker-footer">
  <div class="buttons button--double">
    <a class="button" data-close=""><%= t("paragraphs_picker.close", scope: "decidim.enhanced_textwork") %></a>
  </div>
</div>

<%= javascript_pack_tag "decidim_enhanced_textwork_admin" %>
