<% if params.dig("filter", "state_withdraw").present? && params["filter"]["state_withdraw"] == "withdrawn" %>
  <div class="callout warning">
    <%= t("decidim.enhanced_textwork.paragraphs.index.text_banner",
          go_back_link: link_to(t("decidim.enhanced_textwork.paragraphs.index.click_here"), paragraphs_path("filter[state_withdraw]" => nil)),
          ).html_safe %>
  </div>
<% end %>

<div class="collection-sort-controls row small-up-1 medium-up-3 card-grid">
  <div class="column">
    <%= order_selector available_orders, i18n_scope: "decidim.enhanced_textwork.paragraphs.orders" %>
  </div>

  <div class="column">
    <%= render partial: "decidim/shared/results_per_page" %>
  </div>
</div>

<div class="row small-up-1 medium-up-2 card-grid">
  <%= render @paragraphs %>
</div>

<div class="row">
  <div class="columns mediumlarge-8 large-9">
    <% if @paragraphs.empty? %>
      <div class="callout secondary">
        <% if params[:filter].present? %>
          <p><%= t(".empty_filters") %></p>
        <% else %>
          <p><%= t(".empty") %></p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<%= decidim_paginate @paragraphs %>

<div class="row">
  <div class="text-right">
    <% if params.dig("filter", "state_withdraw").present? && params["filter"]["state_withdraw"] == "withdrawn" %>
      <%= link_to t("decidim.enhanced_textwork.paragraphs.index.see_all"), paragraphs_path("filter[state_withdraw]" => nil) %>
    <% else %>
      <%= link_to t("decidim.enhanced_textwork.paragraphs.index.see_all_withdrawn"), paragraphs_path(filter: { state_withdraw: "withdrawn", state: [""] }) %>
    <% end %>
  </div>
</div>
