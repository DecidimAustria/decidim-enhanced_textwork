<div id="js-assign-paragraphs-to-valuator-actions" class="hide js-bulk-action-form">
  <%= form_tag(valuation_assignment_path, method: :post, id: "js-form-assign-paragraphs-to-valuator", class: "flex--cc flex-gap--1") do %>
    <div class="checkboxes hide">
      <% paragraphs.each do |paragraph| %>
        <%= check_box_tag "paragraph_ids[]", paragraph.id, false, class: "js-check-all-paragraph js-paragraph-id-#{paragraph.id}" %>
      <% end %>
    </div>

    <%= bulk_valuators_select(current_participatory_space, t("decidim.enhanced_textwork.admin.paragraphs.index.assign_to_valuator")) %>

    <%= submit_tag(t("decidim.enhanced_textwork.admin.paragraphs.index.assign_to_valuator_button"), id: "js-submit-assign-paragraphs-to-valuator", class: "button small button--simple float-left") %>

    <button id="js-cancel-assign-paragraphs-to-valuator" class="button tiny clear compact js-cancel-bulk-action" type="button"><%= t("decidim.enhanced_textwork.admin.paragraphs.index.cancel") %></button>
  <% end %>
</div>
