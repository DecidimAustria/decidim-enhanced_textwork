<div id="js-split-paragraphs-actions" class="hide js-bulk-action-form">
  <%= form_tag(paragraphs_split_path, method: :post, id: "js-form-split-paragraphs", class: "flex--cc flex-gap--1") do %>
    <div class="checkboxes hide">
      <% paragraphs.each do |paragraph| %>
        <%= check_box_tag "paragraph_ids[]", paragraph.id, false, class: "js-check-all-paragraph js-paragraph-id-#{paragraph.id}" %>
      <% end %>
    </div>

    <%= bulk_components_select((current_component.siblings + [current_component])) %>

    <%= submit_tag(t("decidim.enhanced_textwork.admin.paragraphs.index.split_button"), id: "js-submit-split-paragraphs", class: "button small button--simple float-left") %>

    <button id="js-cancel-split-paragraphs" class="button tiny clear compact js-cancel-bulk-action" type="button"><%= t("decidim.enhanced_textwork.admin.paragraphs.index.cancel") %></button>
  <% end %>
</div>
