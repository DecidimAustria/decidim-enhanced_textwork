<div id="js-recategorize-paragraphs-actions" class="hide js-bulk-action-form">
  <%= form_tag(update_category_paragraphs_path, method: :post, remote: true, id: "js-form-recategorize-paragraphs", class: "flex--cc flex-gap--1") do %>
    <div class="checkboxes hide">
      <% paragraphs.each do |paragraph| %>
        <%= check_box_tag "paragraph_ids[]", paragraph.id, false, class: "js-check-all-paragraph js-paragraph-id-#{paragraph.id}" %>
      <% end %>
    </div>

    <%= bulk_categories_select current_component.categories %>

    <%= submit_tag(t("decidim.enhanced_textwork.admin.paragraphs.index.update"), id: "js-submit-edit-category", class: "button small button--simple float-left") %>

    <button id="js-cancel-edit-category" class="button tiny clear compact js-cancel-bulk-action" type="button"><%= t("decidim.enhanced_textwork.admin.paragraphs.index.cancel") %></button>
  <% end %>
</div>
